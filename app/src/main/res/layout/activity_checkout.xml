<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".Checkout">

    <RelativeLayout
        android:id="@+id/checkout_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menu_ic"
            android:layout_width="13dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back_ic"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_medium"
            android:text="Checkout"
            android:textAllCaps="false"
            android:textColor="#1B1A34"
            android:textSize="15sp" />
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:background="@color/bg_color"
        app:layout_constraintBottom_toTopOf="@+id/proceed_layout"
        app:layout_constraintTop_toBottomOf="@+id/checkout_layout"
        tools:context=".Checkout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Address details"
                android:textAllCaps="false"
                android:textColor="@color/txt_color"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="20dp"
                android:background="#ffff"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="21dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/poppins_regular"
                        android:text="km 5 refinery road opposite republic road , effurun, delta state"
                        android:textAlignment="textStart"
                        android:textColor="@color/txt_color"
                        android:textSize="16sp"
                        tools:ignore="RtlCompat" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="#B7B7B7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/poppins_regular"
                        android:text="+234 9011039271"
                        android:textAlignment="textStart"
                        android:textColor="@color/txt_color"
                        android:textSize="16sp"
                        tools:ignore="RtlCompat" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Payment method"
                android:textAllCaps="false"
                android:textColor="@color/txt_color"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                android:background="#ffff"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="21dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
                                android:id="@+id/radio_button1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="3dp"
                                android:buttonTint="@color/txt_color"
                                android:checked="true"
                                android:fontFamily="@font/poppins_regular"
                                android:textAlignment="textStart"
                                android:textColor="@color/txt_color"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/cash_ic"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toRightOf="@+id/radio_button1"
                                android:src="@drawable/cashondel" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="15dp"
                                android:layout_toRightOf="@+id/cash_ic"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Cash on delivery"
                                android:textAllCaps="false"
                                android:textColor="@color/txt_color"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_below="@+id/cash_ic"
                                android:layout_alignParentLeft="true"
                                android:layout_marginStart="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="#B7B7B7" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
                                android:id="@+id/radio_button2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="3dp"
                                android:buttonTint="@color/txt_color"
                                android:checked="false"
                                android:fontFamily="@font/poppins_regular"
                                android:textAlignment="textStart"
                                android:textColor="@color/txt_color"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/card_ic"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toRightOf="@+id/radio_button2"
                                android:src="@drawable/cardpay" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="15dp"
                                android:layout_toRightOf="@+id/card_ic"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Card"
                                android:textAllCaps="false"
                                android:textColor="@color/txt_color"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/card_ic"
                                android:layout_alignParentLeft="true"
                                android:layout_marginStart="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="#B7B7B7" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <RadioButton
                                android:id="@+id/radio_button3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="3dp"
                                android:buttonTint="@color/txt_color"
                                android:checked="false"
                                android:fontFamily="@font/poppins_regular"
                                android:textAlignment="textStart"
                                android:textColor="@color/txt_color"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/upi_ic"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toRightOf="@+id/radio_button3"
                                android:src="@drawable/upi" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="15dp"
                                android:layout_toRightOf="@+id/upi_ic"
                                android:fontFamily="@font/poppins_regular"
                                android:text="UPI"
                                android:textAllCaps="false"
                                android:textColor="@color/txt_color"
                                android:textSize="16sp" />

                        </RelativeLayout>

                    </RadioGroup>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/proceed_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/login_btn_bg"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#00000000"
            android:fontFamily="@font/roboto_medium"
            android:text="Proceed"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp"

            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>